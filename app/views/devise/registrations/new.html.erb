<div class="auth container">
  <div class="auth__container">

    <h2 class="auth__header">Sign up</h2>

    <%= form_with(
                model:resource,
                scope: resource_name,
                url: registration_path(resource_name),
                class: 'form') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__field">
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :username, class: "form__label" %>
        <%= f.text_field :username, autocomplete: "username", class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :first_name, class: "form__label" %>
        <%= f.text_field :first_name, autocomplete: "first_name", class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :last_name, class: "form__label" %>
        <%= f.text_field :last_name, autocomplete: "last_name", class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :birthday, class: "form__label" %>
        <%= f.date_field :birthday,
                     max: Date.today,
                     autocomplete: "birthday",
                     class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :password, class: "form__label" %>
        <% if @minimum_password_length %>
          <em>
            (<%= @minimum_password_length %>
            characters minimum)
          </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form__input" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "form__label" %><br>
        <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         class: "form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
