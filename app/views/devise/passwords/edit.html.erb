<div class="auth container">
  <div class="auth__container">

    <h2 class="auth__header">Change your password</h2>

    <%= form_with model: resource, scope: resource_name,url: password_path(resource_name),method: :put,class: 'form'  do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form__field">
        <%= f.label :password, "New password", class: "form__label" %>
        <% if @minimum_password_length %>
          <em>
            (<%= @minimum_password_length %>
            characters minimum)
          </em>
        <% end %>
        <%= f.password_field :password,
                         autofocus: true,
                         autocomplete: "new-password",
                         class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :password_confirmation, "Confirm new password", class: "form__label" %>
        <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         class: "form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "button" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
