<div class="auth container">
  <div class="auth__container">

    <h2 class="auth__header">Forgot your password?</h2>

    <%= form_with model: resource, scope: resource_name,url: password_path(resource_name),method: :post,class: 'form'  do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__field">
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "button" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
