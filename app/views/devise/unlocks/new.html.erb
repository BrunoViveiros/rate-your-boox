<div class="middle container">
  <div class="middle__container">

    <h2 class="middle__header">Resend unlock instructions</h2>

    <%= form_with(
                model: resource,
                scope: resource_name,
                url: unlock_path(resource_name),
                class: 'form') do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form__field">
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form__input" %>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions", class: "button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
