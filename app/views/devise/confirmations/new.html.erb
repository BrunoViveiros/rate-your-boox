<div class="middle container">
  <div class="middle__container">

    <h2 class="middle__header">Resend confirmation instructions</h2>

    <%= form_with model: resource, scope: resource_name, url: confirmation_path(resource_name), method: :post, class: 'form' do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form__input",
                      value:
                        (
                          if resource.pending_reconfirmation?
                            resource.unconfirmed_email
                          else
                            resource.email
                          end
                        ) %>
      </div>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: "button" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
