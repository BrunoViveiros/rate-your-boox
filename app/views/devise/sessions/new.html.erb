<div class="middle container">
  <div class="middle__container">

    <h2 class="middle__header">Log in</h2>

    <%= form_with(
                model: resource,
                scope: resource_name,
                url: session_path(resource_name),
                class: 'form') do |f| %>

      <div class="form__field">
        <%= f.label :email, class: "form__label" %>
        <%= f.email_field :email,
                      autofocus: true,
                      autocomplete: "email",
                      class: "form__input" %>
      </div>

      <div class="form__field">
        <%= f.label :password, class: "form__label" %>
        <%= f.password_field :password,
                         autocomplete: "current-password",
                         class: "form__input" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form__field">
          <%= f.check_box :remember_me, class: "form__checkbox" %>
          <%= f.label :remember_me, class: "form__checkbox-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
